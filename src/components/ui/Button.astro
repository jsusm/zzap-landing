---
import { type HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";

interface Props extends HTMLAttributes<"button"> {
  variant?: keyof typeof variants;
}

const { class: className = "", variant = 'default', ...rest } = Astro.props;
const baseStyles =
  "inline-flex items-center justify-center px-4 py-2 rounded-lg text-sm font-medium";
const variants = {
  ghost: "bg-transparent hover:bg-gray-100 active:bg-gray-200",
  default: 'border border-gray-300 bg-gray-50 hover:bg-gray-100 active:bg-gray-200',
};
---

<button class={twMerge(baseStyles, variants[variant], className)} {...rest}>
  <slot />
</button>
