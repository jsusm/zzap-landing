---
import { twMerge } from "tailwind-merge";

interface Props {
  title?: string;
  subtitle?: string;
  classes?: Record<string, string>;
}

const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("title"),
  classes = {},
} = Astro.props;

const {
  container: containerClass = "max-w-3xl",
  title: titleClass = "text-3lx md:text-4xl",
  subtitle: subtitleClass = "text-xl",
} = classes;
---

{
  (title || subtitle) && (
    <div
      class={twMerge(
        "mb-8 px-8 text-center md:mx-auto md:mb-12",
        containerClass,
      )}
    >
      {title && (
        <h2
          class={twMerge(
            "text-2xl font-bold leading-4 tracking-tight text-gray-800 dark:text-gray-200",
            titleClass,
          )}
          set:html={title}
        />
      )}
      {subtitle && (
        <p
          class={twMerge(
            "mt-4 text-gray-600 dark:text-gray-400",
            subtitleClass,
          )}
          set:html={subtitle}
        />
      )}
    </div>
  )
}
