---
import { Icon } from "astro-icon/components";
import Button from "../components/ui/Button.astro";
---

<header>
  <div class="container mx-auto flex items-center justify-between px-6 py-6">
    <div>
      <div class="flex items-center">
        <Icon name="tabler:bolt" size={28} class="text-blue-600" />
        <p class="text-lg font-medium">zzap</p>
      </div>
    </div>
    <div class="flex gap-x-3">
      <Button
        class="h-9 w-9 px-0 py-0 text-gray-600 sm:h-11 sm:w-11"
        variant="ghost"
        data-toggle-theme
      >
        <Icon name="tabler:sun-low" class="h-6 w-6" />
      </Button>
      <Button
        class="bg-gray-900 text-white transition-colors hover:bg-blue-600 active:bg-blue-700 dark:bg-gray-50 dark:text-gray-900 dark:hover:bg-blue-600 dark:hover:text-blue-50"
        size="lg"
      >
        Sign up
      </Button>
      <Button size="lg">Sign in</Button>
    </div>
  </div>
</header>
